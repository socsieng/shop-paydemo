{
  "hosting": {
    "predeploy": [
      "npm run build:static -- --name default --add-service-worker"
    ],
    "public": "build/default",
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*"
    ]
  }
}
